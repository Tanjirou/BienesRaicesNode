extends ../layout/index
block content
    div.py-3 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-bold=page

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form(action="").space-y-4
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="name") Tu Nombre
                        input#name.w-full.px-3.py-2.border.border-gray-300.roudend-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="name")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Correo
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Correo de registro" type="email" name="email") 
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Contraseña" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="repeat_password") Repetir Contraseña
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir Contraseña" type="password" name="repeat_password")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/recover-password") Olvide mi Contraseña   
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white rounded-md font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")